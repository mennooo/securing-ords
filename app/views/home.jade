extends layout

block content
  .container-fluid
    if messages.error
      .alert.alert-danger(role='alert')
        for error in messages.error
          div= error.msg
    if messages.success
      .alert.alert-success(role='alert')
        for success in messages.success
          div= success.msg
    if messages.info
      .alert.alert-info(role='alert')
        for info in messages.info
          div= info.msg
  .container

    each productRow in productsPerRow

      .row.display-flex

        each product in productRow

          .col-md-3
            .thumbnail.bg-white
              img(src='data:#{product.mimetype};base64, #{product.product_image}', alt='...')
              .caption
                h3= product.product_name
                p= product.product_description
                p
                  span $#{product.list_price},-
                  a.btn.btn-primary.pull-right(href='/order', role='button') 
                    span.glyphicon.glyphicon-shopping-cart(aria-hidden="true") 
                    |  Buy
      


